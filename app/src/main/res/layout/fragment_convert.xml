<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color1"
    tools:context=".ui.timerFragment">


    <TextView
        android:id="@+id/lbs_to_kgs_switch"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_marginEnd="20dp"
        android:paddingStart="10dp"
        android:text="KGS to LBS"
        android:textColor="@android:color/black"
        app:autoSizeMaxTextSize="30sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@id/guideline_50h"
        app:layout_constraintEnd_toStartOf="@id/switch1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_45h" />

    <TextView
        android:id="@+id/kgs_to_lbs_switch"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:paddingEnd="10dp"
        android:text="LBS to KGS"
        android:textColor="@android:color/black"
        app:autoSizeMaxTextSize="30sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@id/guideline_50h"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/switch1"
        app:layout_constraintTop_toTopOf="@id/guideline_45h" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.MySwitch"
        android:scaleX="1.3"
        android:scaleY="1.3"
        app:layout_constraintBottom_toBottomOf="@id/guideline_50h"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_45h"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <ImageView
        android:id="@+id/kg_to_lbs_box"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/roudned_edittext"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:visibility="visible"
        app:autoSizeMaxTextSize="40sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@id/guideline_45h"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_10h"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/kgs_to_lbs_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:digits="1234567890"
        android:gravity="center"
        android:imeOptions="actionDone"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@id/guideline_25h"
        app:layout_constraintEnd_toEndOf="@id/guideline_25v"
        app:layout_constraintStart_toStartOf="@id/kg_to_lbs_box"
        app:layout_constraintWidth_percent="0.2" />

    <TextView
        android:id="@+id/kgs_is_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal|bottom"
        android:text="KGS IS"
        android:textColor="@android:color/black"
        app:autoSizeMaxTextSize="30sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@id/guideline_25h"
        app:layout_constraintEnd_toEndOf="@id/guideline_50v"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/guideline_25v"
        app:layout_constraintTop_toTopOf="@id/kg_to_lbs_box"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/lbs_out_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        android:gravity="center_horizontal|bottom"
        android:textColor="@color/color3"
        android:text="_______"
        app:autoSizeMaxTextSize="32sp"
        app:autoSizeMinTextSize="20sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@id/guideline_25h"
        app:layout_constraintEnd_toEndOf="@id/guideline_75v"
        app:layout_constraintStart_toStartOf="@id/guideline_50v"
        app:layout_constraintTop_toTopOf="@id/kg_to_lbs_box" />

    <TextView
        android:id="@+id/lbs_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal|bottom"
        android:text="LBS"
        android:textColor="@android:color/black"
        app:autoSizeMaxTextSize="28sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@id/guideline_25h"
        app:layout_constraintEnd_toEndOf="@id/lbs_to_kg_box"
        app:layout_constraintStart_toStartOf="@id/guideline_75v"
        app:layout_constraintTop_toTopOf="@id/kg_to_lbs_box" />


    <Button
        android:id="@+id/kg_to_lbs_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Convert KGS to LBS"
        app:autoSizeMaxTextSize="15sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        android:background="@drawable/roudned_edittext2"
        app:layout_constraintBottom_toBottomOf="@id/kg_to_lbs_box"
        app:layout_constraintEnd_toEndOf="@id/guideline_75v"
        app:layout_constraintStart_toStartOf="@id/guideline_25v"
        app:layout_constraintTop_toTopOf="@id/guideline_25h" />

    <ImageView
        android:id="@+id/lbs_to_kg_box"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/roudned_edittext2"
        android:padding="10dp"
        app:autoSizeMaxTextSize="40sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@id/guideline_45h"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_10h"
        tools:visibility="invisible"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/lbs_to_kgs_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:digits="1234567890"
        android:imeOptions="actionDone"
        android:gravity="center"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@id/guideline_25h"
        app:layout_constraintEnd_toEndOf="@id/guideline_25v"
        app:layout_constraintStart_toStartOf="@id/lbs_to_kg_box"
        app:layout_constraintWidth_percent="0.2"
        tools:visibility="invisible"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/lbs_is_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal|bottom"
        android:text="LBS IS"
        android:textColor="@android:color/black"
        app:autoSizeMaxTextSize="30sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@id/guideline_25h"
        app:layout_constraintEnd_toEndOf="@id/guideline_50v"
        app:layout_constraintStart_toStartOf="@id/guideline_25v"
        app:layout_constraintTop_toTopOf="@id/lbs_to_kg_box"
        tools:visibility="invisible"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/kgs_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal|bottom"
        android:text="KGS"
        android:textColor="@android:color/black"
        app:autoSizeMaxTextSize="28sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@id/guideline_25h"
        app:layout_constraintEnd_toEndOf="@id/lbs_to_kg_box"
        app:layout_constraintStart_toStartOf="@id/guideline_75v"
        app:layout_constraintTop_toTopOf="@id/lbs_to_kg_box"
        tools:visibility="invisible"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/kgs_out_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        android:gravity="center_horizontal|bottom"
        android:text="_______"
        android:textColor="@color/color3"
        app:autoSizeMaxTextSize="32sp"
        app:autoSizeMinTextSize="20sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@id/guideline_25h"
        app:layout_constraintEnd_toEndOf="@id/guideline_75v"
        app:layout_constraintStart_toStartOf="@id/guideline_50v"
        app:layout_constraintTop_toTopOf="@id/lbs_to_kg_box"
        tools:visibility="invisible"
        android:visibility="invisible"/>


    <Button
        android:id="@+id/lbs_to_kgs_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Convert LBS to KGS"
        app:autoSizeMaxTextSize="15sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        android:background="@drawable/roudned_edittext"
        app:layout_constraintBottom_toBottomOf="@id/lbs_to_kg_box"
        app:layout_constraintEnd_toEndOf="@id/guideline_75v"
        app:layout_constraintStart_toStartOf="@id/guideline_25v"
        app:layout_constraintTop_toTopOf="@id/guideline_25h"
        android:visibility="invisible" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_50h"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_10h"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.10" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_25h"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_45h"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_65h"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_85h"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_50v"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_25v"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_75v"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />

</androidx.constraintlayout.widget.ConstraintLayout>