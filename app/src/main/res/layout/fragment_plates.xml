        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />



    <ImageView
        android:id="@+id/imageView_25kg"
        android:padding="2dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/guideline_25h"
        app:layout_constraintBottom_toBottomOf="@id/guideline_40h"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline_25v"
        app:srcCompat="@drawable/plate_25kg" />


    <TextView
        android:id="@+id/res25kg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#000000"
        android:textSize="46sp"
        app:layout_constraintBottom_toBottomOf="@id/guideline_40h"
        app:layout_constraintEnd_toEndOf="@id/guideline_50v"
        app:layout_constraintStart_toStartOf="@id/guideline_25v"
        app:layout_constraintTop_toTopOf="@id/guideline_25h" />

    <EditText
        android:id="@+id/edit25kg"
