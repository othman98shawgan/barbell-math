        android:layout_height="wrap_content"
        android:hint="0"
        android:inputType="phone"
        android:digits="1234567890"        android:textColor="#000000"
        android:textSize="46sp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@id/guideline_40h"
        app:layout_constraintEnd_toEndOf="@id/guideline_50v"
